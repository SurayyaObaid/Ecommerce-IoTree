<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DonationActivity">

    <TextView
        android:layout_width="420dp"
        android:layout_height="40dp"
        android:text="Donate Plants"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"
        android:gravity="center"/>

    <EditText
        android:layout_height="35dp"
        android:layout_width="290dp"
        android:id="@+id/donusername"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:hint="Full name"
        android:textSize="15dp"
        android:layout_marginVertical="15dp"
        android:inputType="textPersonName"
        />

    <EditText
        android:layout_height="35dp"
        android:layout_width="290dp"
        android:id="@+id/donnic"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:hint="Your CNIC"
        android:textSize="15dp"
        android:layout_marginVertical="15dp"
        android:inputType="numberSigned"
        />
    <EditText
        android:layout_height="35dp"
        android:layout_width="290dp"
        android:id="@+id/donnum"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:hint="Your Contact Number"
        android:textSize="15dp"
        android:layout_marginVertical="15dp"
        android:inputType="numberSigned"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="60dp"
        android:background="@android:color/white"
        android:layout_marginVertical="15dp"
        >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donLocation"
        android:hint="Location"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_location_on_24"
        android:id="@+id/donLocationButton"
        />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Number of Trees"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/tv" />
    <Spinner
        android:id="@+id/treeSpinner"
        android:layout_width="290dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Mode: Cash On Delivery"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="290dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:text="Donate"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_color_btn"
        android:layout_margin="30dp"
        android:id="@+id/donateBtn"
        />
</LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btmnav"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        app:itemBackground="@android:color/white"
        app:itemIconTint="@color/brown"
        app:itemTextColor="@color/brown"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>